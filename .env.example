# Database Configuration
MONGODB_URI=mongodb://localhost:27017/cyberguard
REDIS_URL=redis://localhost:6379/0
DATABASE_NAME=cyberguard_prod

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false
ENVIRONMENT=development

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# AWS Configuration (for cloud deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cyberguard-bucket

# ML Model Configuration
ML_MODEL_PATH=./ml-module/models/threat_detection_model.h5
ML_THRESHOLD=0.85
ML_UPDATE_INTERVAL=3600

# Threat Intelligence
THREAT_INTELLIGENCE_API_KEY=your-threat-intel-api-key
THREAT_UPDATE_INTERVAL=1800

# Client Configuration
CLIENT_UPDATE_URL=https://api.cyberguard.com/updates
CLIENT_HEARTBEAT_INTERVAL=300
CLIENT_SCAN_INTERVAL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/cyberguard/server.log

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Email Configuration (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ALERT_EMAIL=alerts@cyberguard.com

# External APIs
VIRUS_TOTAL_API_KEY=your-virustotal-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key
